<% include ./navbar %>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">

    <link rel="stylesheet" href="style.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Tangerine">


    <body>
        <br><br><br>
        <div class="w3-container w3-tangerine">
            <p class="w3-jumbo">Latest Blog's</p>
            <hr>
        </div>
        <%posts.forEach(item=>{%>
            <div class="container">
                <h1 class="title">
                    <b> <u><%= item.title%></u></b>
                </h1>
                <p>
                    <%= item.blog%>

                        <button class="btn btn-dark" id="view_more" value="View more">
                        <a id="link"  href="/blog/<%=item._id%>" >View more</a></button>
                </p>
                <br>
                <label for="Author">Author:&nbsp;</label>
                <%= item.author%>
                    <hr>
            </div>

            <%})%>


    </body>
